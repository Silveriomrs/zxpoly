
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>withjre_windows</id>

  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>

  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac</directory>
      <outputDirectory>${file.separator}</outputDirectory>
      <excludes>
        <exclude>ZXPoly Emul.app${file.separator}Contents${file.separator}MacOS</exclude>
      </excludes>
      <includes>
       <include>*/**</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac${file.separator}ZXPoly Emul.app${file.separator}Contents${file.separator}MacOS${file.separator}zxpoly</source>
      <destName>zxpoly</destName>
      <outputDirectory>${file.separator}ZXPoly Emul.app${file.separator}Contents${file.separator}MacOS</outputDirectory>
      <fileMode>755</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.build.directory}${file.separator}${artifactId}-${version}.jar</source>
      <destName>${artifactId}-${version}.jar</destName>
      <outputDirectory>${file.separator}ZXPoly Emul.app${file.separator}Contents${file.separator}MacOS</outputDirectory>
    </file>
  </files>
</assembly>
